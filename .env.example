# ============================================
# CONFIGURACIÓN DE n8n
# ============================================
# Copia este archivo a .env y configura tus valores

N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=tu_contraseña_segura_aqui

N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Zona horaria - Ajusta según tu ubicación
GENERIC_TIMEZONE=Europe/Madrid

EXECUTIONS_PROCESS=main

# ============================================
# POSTGRESQL - BASE DE DATOS
# ============================================
DB_TYPE=postgresdb
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=tu_contraseña_segura_aqui

POSTGRES_USER=n8n
POSTGRES_PASSWORD=tu_contraseña_segura_aqui
POSTGRES_DB=n8n
POSTGRES_NON_ROOT_USER=n8n
POSTGRES_NON_ROOT_PASSWORD=tu_contraseña_segura_aqui

# ============================================
# ENCRIPTACIÓN
# ============================================
# Genera una clave con: openssl rand -hex 32
N8N_ENCRYPTION_KEY=tu_clave_de_encriptacion_aqui

# ============================================
# API KEYS - SERVICIOS DE IA
# ============================================
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
